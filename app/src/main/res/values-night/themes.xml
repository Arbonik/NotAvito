<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.KarMa" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/fio_dark</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green_normal</item>
        <item name="colorSecondaryVariant">@color/green_normal</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextNormalTitle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">54sp</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="TextNormalBody">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="FioMaterialEditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:elevation">100dp</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:textColorHint">@color/black_purple</item>
        <item name="boxStrokeColor">@color/fio_norm</item>
        <item name="boxStrokeErrorColor">@color/purple_100</item>
        <item name="counterTextColor">@color/fio_norm</item>
        <item name="errorTextColor">@color/purple_100</item>
        <item name="hintTextColor">@color/fio_norm</item>
    </style>

    <style name="GreenMaterialButtonFill">
        <item name="android:elevation">100dp</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:backgroundTint">@color/fio_light</item>
        <item name="android:textColor">@color/fio_dark</item>
    </style>

    <style name="NavBarHeaderBack">
        <item name="android:background">@color/fio_norm</item>
        <item name="android:iconTint" tools:targetApi="o">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="itemIconTint">@color/list_selector_night</item>
        <item name="itemTextColor">@color/list_selector_night</item>
    </style>

    <style name="ImageVWithIcon">
        <item name="android:background">@color/fio_dark</item>
    </style>

    <style name="BackgroundDayNight_normal">
        <item name="android:background">@color/black</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabIndicatorColor">@color/fio_norm</item>
    </style>

    <style name="BackgroundRecyclerView">
        <item name="android:background">@color/black</item>
    </style>

    <style name="MaterialAlertDialog_OK_color" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle.textColor</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle.textColor</item>
    </style>

    <style name="PositiveButtonStyle.textColor" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/fio_light</item>
    </style>
    <style name="NegativeButtonStyle.textColor" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/fio_light</item>
    </style>

    <style name="ProfileBackground">
        <item name="android:background">@color/tx_grey</item>
    </style>

</resources>