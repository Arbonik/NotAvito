<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.KarMa" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/green_light</item>
        <item name="colorPrimaryVariant">@color/green_normal</item>
        <item name="colorOnPrimary">@color/fio_dark</item>
        <item name="colorSecondary">@color/fio_light</item> <!--floating button-->
        <item name="colorSecondaryVariant">@color/fio_light</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="toolbarStyle">@style/ToolbarStyle</item>
        <item name="actionOverflowButtonStyle">@style/ToolbarStyle.Overflow</item>
        <item name="toolbarNavigationButtonStyle">@style/Toolbar.Button.Navigation.Tinted</item>
    </style>

    <style name="Theme.KarMa.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.KarMa.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar" />

    <style name="Theme.KarMa.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />

    <style name="BackgroundRecyclerView">
        <item name="android:background">@color/light_grey</item>
    </style>

    <style name="TextNormalTitle">
        <item name="android:elevation">100dp</item>
        <item name="android:textColor">@color/tx_grey</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">54sp</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="TextNormalBody">
        <item name="android:elevation">102dp</item>
        <item name="android:textColor">@color/tx_grey</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="BackgroundDayNight_normal">
        <item name="android:background">@color/white</item>
        <item name="tabSelectedTextColor">@color/tx_grey</item>
        <item name="tabTextColor">#888888</item>
    </style>

    <style name="FioMaterialEditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:elevation">100dp</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:textColorHint">@color/black_purple</item>
        <item name="boxStrokeColor">@color/fio_norm</item>
        <item name="boxStrokeErrorColor">@color/purple_100</item>
        <item name="counterTextColor">@color/fio_norm</item>
        <item name="errorTextColor">@color/purple_100</item>
        <item name="hintTextColor">@color/fio_norm</item>
    </style>

    <style name="FioMaterialAutoText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:elevation">100dp</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:textColorHint">@color/black_purple</item>
        <item name="boxStrokeColor">@color/fio_norm</item>
        <item name="boxStrokeErrorColor">@color/purple_100</item>
        <item name="counterTextColor">@color/fio_norm</item>
        <item name="errorTextColor">@color/purple_100</item>
        <item name="hintTextColor">@color/fio_norm</item>
        <item name="android:colorAccent">@color/fio_norm</item>
        <item name="endIconTint">@color/fio_norm</item>
    </style>

    <style name="GreenMaterialButtonFill">
        <item name="android:elevation">100dp</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:backgroundTint">@color/green_normal</item>
        <item name="android:textColor">@color/fio_dark</item>
    </style>

    <style name="NavBarHeaderBack">
        <item name="android:background">@color/green_normal</item>
        <item name="android:iconTint" tools:targetApi="o">@color/tx_grey</item>
        <item name="android:textColor">@color/tx_grey</item>
        <item name="itemIconTint">@color/list_selector_day</item>
        <item name="itemTextColor">@color/list_selector_day</item>
       <!-- <item name="android:activatedBackgroundIndicator">@color/list_selector_day</item>-->
    </style>

    <style name="ImageVWithIcon">
        <item name="android:background">@color/light_grey</item>
    </style>

    <style name="GreenMaterialButtonOutline" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:backgroundTint">@color/green_light</item>
    </style>

    <style name="MyButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="shapeAppearanceOverlay">@style/MyShapeAppearance</item>
    </style>
    <style name="MyShapeAppearance" parent="">
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerFamilyTopRight">cut</item>
        <item name="cornerFamilyBottomRight">cut</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="ToolbarStyle" parent="@style/Widget.AppCompat.Toolbar">
        <!-- Makes the toolbar text whatever color you want for both light/dark-->
        <item name="titleTextColor">@color/tx_grey</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="ToolbarStyle.Overflow" parent="Widget.AppCompat.ActionButton.Overflow">
        <!-- For toolbar menu -->
        <item name="android:tint">@color/fio_dark</item>
    </style>

    <style name="Toolbar.Button.Navigation.Tinted" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <!-- For the hamburger menu, back button, etc -->
        <item name="tint">@color/fio_dark</item>
    </style>

    <style name="TextStyle">
        <item name="android:textColor">@color/tx_grey</item>
    </style>

    <!-- Alert Dialog -->
    <style name="MaterialAlertDialog_OK_color" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <!-- Style for positive button -->
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle.textColor</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle.textColor</item>
    </style>

    <style name="PositiveButtonStyle.textColor" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/fio_norm</item>
    </style>
    <style name="NegativeButtonStyle.textColor" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/fio_norm</item>
    </style>

</resources>